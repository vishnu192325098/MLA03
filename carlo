import random
states = [0, 1, 2]
episodes = 1000
gamma = 1.0
def simulate_episode(policy):
    state = random.choice(states)
    G = 0
    discount = 1
    for _ in range(5):
        if policy(state) == "ASSIGN" and state > 0:
            reward = 5
            state -= 1
        elif policy(state) == "WAIT":
            reward = -1
        else:
            reward = -5
        G += discount * reward
        discount *= gamma
        state = min(2, state + 1)
    return G
def fast_policy(state):
    return "ASSIGN"
def wait_policy(state):
    return "ASSIGN" if state > 0 else "WAIT"
def monte_carlo(policy):
    returns = {s: [] for s in states}
    for _ in range(episodes):
        s = random.choice(states)
        G = simulate_episode(policy)
        returns[s].append(G)
    return {s: sum(returns[s])/len(returns[s]) for s in states}
print("Fast Policy Value Function:", monte_carlo(fast_policy))
print("Wait Policy Value Function:", monte_carlo(wait_policy))
input("\nPress Enter to exit...")
